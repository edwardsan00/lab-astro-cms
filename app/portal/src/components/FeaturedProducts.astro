---
import type { Product } from '../mocks/products';
import ProductGrid from './ProductGrid.astro';

interface Props {
  products: Product[];
  title?: string;
  subtitle?: string;
  maxProducts?: number;
}

const { 
  products, 
  title = "Productos Destacados",
  subtitle = "Descubre nuestra selecciÃ³n especial",
  maxProducts = 4
} = Astro.props;

const featuredProducts = products
  .filter(product => product.isFeatured)
  .slice(0, maxProducts);
---

<section class="bg-gray-50 py-12 sm:py-16 lg:py-20">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">{title}</h2>
      <p class="mx-auto mt-3 max-w-2xl text-xl text-gray-500 sm:mt-4">{subtitle}</p>
    </div>

    <div class="mt-12">
      <ProductGrid products={featuredProducts} columns={4} />
    </div>

    <div class="mt-12 text-center">
      <a
        href="/ofertas"
        class="inline-flex items-center rounded-md border border-transparent bg-blue-600 px-6 py-3 text-base font-medium text-white shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
      >
        Ver todas las ofertas
      </a>
    </div>
  </div>
</section> 